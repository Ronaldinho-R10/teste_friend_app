<% if user_signed_in? %>


<div class="jumbotron">
<% @friends.each do |friend| %>
        <% if friend.user == current_user %>
  <h1 class="display-4"><%= friend.first_name  %> - <%= friend.phone %></h1>
 
  <p class="lead"><%= link_to friend.last_name,friend.last_name %></p>
  <hr class="my-4">
  <p><%= friend.twitter %></p>
  <p class="lead">
    <a class="btn btn-primary btn-lg" href=<%= friend.last_name %> role="button">Aprender Mais</a>
  </p>
   <% end %>
  <% end %>
  </div>


  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Memory Title : </th>
        <th>Type</th>
        <th>Year</th>
        <th>Describe</th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
        <tr>
          <td>
<%= link_to friend.first_name + ' ' + friend.last_name, friend %>


          </td>
          
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          
          
          
          
          
          <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Memory', new_friend_path, class:"btn btn-secondary" %>
<% else %>

<h1>Welcome to The Memory</h1>
A page to register my memories after things, location or any other information

<% end %>
